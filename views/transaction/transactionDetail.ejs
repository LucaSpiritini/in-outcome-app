<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <title>Details</title>
</head>

<body class="index-body">

  <%- include('../partials/header') %>

    <main class="index-main-container">      

      <div class="child-container">

        <div>

          <h3 class="index-title">
            <%= transaction.type %>
          </h3>

          <div class="transactions-details">
            <div class="">
              <div>
                Date: <%= transaction.date%>
              </div>
              <div>
                Amount: $ <%= transaction.amount%>
              </div>
              <div>
                Description: <%= transaction.description%>
              </div>
              <div>
                Category: 
                <a href="/transactions/category/<%= transaction.category.category_id%>">
                  <%= transaction.category.name %>
                </a>
              </div>
            </div>
          </div>

        </div>

        <div class="edit-delete-container">
          <div><a href="/transactions/edit/<%= transaction.transaction_id%>"><i class="fa-solid fa-pen-to-square"></i></a></div>
          <div><a href="/transactions/delete/<%= transaction.transaction_id%>"><i class="fa-solid fa-trash-can"></i></a></div>
        </div>

      </div>

    </main>

    <%- include('../partials/footer') %>

</body>

</html>
