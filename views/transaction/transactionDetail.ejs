<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <title>Details</title>
</head>

<body class="index-body">

  <%- include('../partials/header') %>

    <main class="index-main-container">
      <div>
        <div> <a href="/transactions/edit/<%= transaction.transaction_id%>">Edit transaction</a></div>
        <div> <a href="/transactions/delete/<%= transaction.transaction_id%>">Delete transaction</a></div>
      </div>
      <div>
        <article>
          <h3 class="<%=transaction.category.color%>">
            <%= transaction.type %>
          </h3>
          <div class="transactions-details">
            <div class="transactions-more">
              <div>
                Date: <%= transaction.date%>
              </div>
              <div>
                Amount: $ <%= transaction.amount%>
              </div>
              <div>
                Description: <%= transaction.description%>
              </div>
              <div>
                Category: <a href="/transactions/category/<%= transaction.category.category_id%>">
                  <%= transaction.category.name %>
                </a></div>
            </div>
          </div>
        </article>
      </div>
    </main>

    <%- include('../partials/footer') %>

</body>

</html>