<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <title>Sign in</title>
</head>

<body class="index-body">
  <%- include('../partials/header') %>

    <main class="index-main-container">
      <div class="index-container">
        <form class="" action="/users/login" method="POST">
          <h1 class="index-title">Sign in</h1>
          <div class="inputs-container">
            <% if(locals.errors && errors.email){ %>
              <div class="text-danger">
                <%= errors.email.msg %>
              </div>
              <% } %>
                <div>
                  <input class="login-input" type="email" name="email" placeholder="Email:" autofocus>
                </div>
                <div>
                  <input class="login-input" type="password" name="password" placeholder="Password:">
                </div>
                <div class="index-button-container">
                  <button class="index-button" type="submit">Submit</button>
                  <!-- <button class="index-button" type="reset">Clear</button> -->
                </div>
          </div>
        </form>
      </div>
    </main>

    <%- include('../partials/footer') %>
</body>

</html>